@page
@model ExamenPracticoDS39.Pages.Product.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Products</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Products.ProductName" class="control-label"></label>
                <input asp-for="Products.ProductName" class="form-control" />
                <span asp-validation-for="Products.ProductName" class="text-danger"></span>
            </div>

            
            <div class="form-group">
                <label asp-for="Products.QuantityPerUnit" class="control-label"></label>
                <input asp-for="Products.QuantityPerUnit" class="form-control" />
                <span asp-validation-for="Products.QuantityPerUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.UnitPrice" class="control-label"></label>
                <input asp-for="Products.UnitPrice" class="form-control" />
                <span asp-validation-for="Products.UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.UnitInStock" class="control-label"></label>
                <input asp-for="Products.UnitInStock" class="form-control" />
                <span asp-validation-for="Products.UnitInStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.UnitsOnOrder" class="control-label"></label>
                <input asp-for="Products.UnitsOnOrder" class="form-control" />
                <span asp-validation-for="Products.UnitsOnOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.ReorderLevel" class="control-label"></label>
                <input asp-for="Products.ReorderLevel" class="form-control" />
                <span asp-validation-for="Products.ReorderLevel" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Products.SupplierId" class="control-label"></label>
                <select asp-for="Products.SupplierId" class="form-control" asp-items="Model.Suppliers">
                    <option value="">Select Supplier</option>
                </select>
                <span asp-validation-for="Products.SupplierId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Products.CategoryId" class="control-label"></label>
                <select asp-for="Products.CategoryId" class="form-control" asp-items="Model.Categories">
                    <option value="">Select Category</option>
                </select>
                <span asp-validation-for="Products.CategoryId" class="text-danger"></span>
            </div>


            <div class="form-group form-check">
                <input class="form-check-input" asp-for="Products.Discontinued" />
                <label class="form-check-label">@Html.DisplayNameFor(model => model.Products.Discontinued)</label>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
